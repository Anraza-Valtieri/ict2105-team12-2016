<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!-- Use same ID to use built-in features -->
    <TextView
        android:id="@+id/card_extension_title"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_extension_title"
        android:text="Allow"
        android:id="@+id/allowextensionbtn"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_extension_title"
        android:layout_toRightOf="@+id/allowextensionbtn"
        android:text="Deny"
        android:id="@+id/denyextensionbtn"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>