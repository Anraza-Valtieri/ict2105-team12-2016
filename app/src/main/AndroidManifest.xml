<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chowdi.qremind">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LogoCoverPageActivity"
            android:theme="@style/SplashTheme" />
        <!-- Testing activities -->
        <activity
            android:name=".Vendor.VendorDashBoardActivity"
            android:label="@string/title_activity_business_queue_dashboard" />
        <activity
            android:name=".Customer.CustomerHomeActivity"
            android:label="@string/text_customer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- End Testing activities -->
        <activity
            android:name=".Login_RegisterActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_activity"
            android:parentActivityName=".Login_RegisterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Register_Activity"
            android:label="@string/register_activity"
            android:parentActivityName=".Login_RegisterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".CustomerProfilePageActivity"
            android:label="@string/cust_prof_activity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ChooseTaskActivity"
            android:label="@string/choosetask_activity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".BusinessProfileActivity"
            android:label="@string/buss_prof_activity"
            android:parentActivityName=".ChooseTaskActivity"
            android:label="@string/buss_prof_activity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".CustomerHomePageActivity"
            android:label="Customer Home Page"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>
