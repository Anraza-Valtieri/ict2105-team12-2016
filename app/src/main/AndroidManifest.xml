<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chowdi.qremind">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LogoCoverPageActivity"
            android:theme="@style/SplashTheme">

        </activity>
        <activity
            android:name=".Login_RegisterActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/text_login"
            android:parentActivityName=".Login_RegisterActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".Register_Activity"
            android:label="@string/text_create_account"
            android:parentActivityName=".Login_RegisterActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".CustomerProfilePageActivity"
            android:label="Profile"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".BusinessProfileActivity"
            android:label="Shop Profile"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".business_activities.BusinessQueueDashboard"
            android:label="@string/title_activity_business_queue_dashboard"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
