<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chowdi.qremind">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".infrastructure.QremindApplication"
        >
        <activity
            android:name=".LogoCoverPageActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Testing activities -->
        <activity android:name=".Vendor.ClaimQRCodeActivity"
            android:label="Claim Queue"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Vendor.VendorDashBoardActivity"
            android:label="@string/title_activity_business_queue_dashboard"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Customer.CustomerGetQueueActivity"
            android:label="@string/title_activity_customer_get_queue"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Customer.CustomerCurrentServing"
            android:label="@string/title_activity_customer_home"
            android:screenOrientation="portrait">
        </activity>
        <!-- End Testing activities -->
        <activity
            android:name=".Login_RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".Login_RegisterActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Register_Activity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".Login_RegisterActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Customer.CustomerProfilePageActivity"
            android:label="@string/title_activity_cust_prof"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseTaskActivity"
            android:label="@string/title_activity_choosetask"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Vendor.BusinessProfileActivity"
            android:label="@string/title_activity_buss_prof"
            android:parentActivityName=".ChooseTaskActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Customer.CustomerHomePageActivity"
            android:label="Customer Home Page"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />

        <activity android:name=".utils.QRCodeScanner"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>
